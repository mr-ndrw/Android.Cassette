<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recording_card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    card_view:contentPadding="5dp"
    card_view:cardBackgroundColor="@color/primary_light"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/recording_card_view_date_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentStart="true"
            android:textColor="@color/black_text"
            android:text="17th February 2015"
            android:textSize="16sp"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/recording_card_view_length"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:textColor="@color/black_secondary_text"
            android:text="35 minutes"
            android:textSize="14sp"
            android:gravity="center_vertical" />

    </RelativeLayout>

</android.support.v7.widget.CardView>